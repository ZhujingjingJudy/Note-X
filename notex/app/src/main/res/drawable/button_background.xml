<!-- button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for the button -->
    <solid android:color="#FFFFFF" /> <!-- Change color as per your design -->

    <!-- Corner radius for rounded corners -->
    <corners android:radius="8dp" /> <!-- Adjust radius as needed -->

    <!-- Border for the button (optional) -->
    <stroke
        android:width="1dp"
        android:color="#000000" /> <!-- Change color and width as needed -->

</shape>
